<script type="text/javascript">
	$(document).ready(function() {

		$("a[href*='" + location.pathname + "']").addClass("active");
		$('#messageDiv').delay(5000).fadeOut('slow');
	});
</script>
<div id="wrapper">
	<div id="header-wrapper">
		<div class="browser-center">
			<div id="header-area">
				<div id="logo">
					<a href="/"><%= image_tag("logo.jpg", :alt => "") %></a>
				</div>
				<div id="facebook-like">
					<%= image_tag("facebook-like.jpg", :alt => "") %>
				</div>
				<div id="customer-support">
					<p>
						Customer Support
					</p>
					<h1>703 555 5555</h1>
					<p>
						Any Questions <a href="<%= nicks_list_ContactUs_url %>">Email Us</a>
					</p>
				</div>
				<div id="navigation">
					<div id="nav">
						<ul>
							<li>
								<a href="<%= root_url %>">Home</a>
							</li>
							<li>
								<a href="<%= nicks_list_About_url %>">About BillysList</a>
							</li>
							<li>
								<a href="<%= nicks_list_HowItWorks_url %>">How it works</a>
							</li>
							<li>
								<a href="<%= nicks_list_FAQ_url %>">FAQâ€™s</a>
							</li>
							<li>
								<a href="<%= nicks_list_Testimonials_url %>">Testimonials</a>
							</li>
							<li>
								<a href="<%= nicks_list_PressRelease_url %>">Press Release</a>
							</li>
							<li>
								<a href="<%= nicks_list_ContactUs_url %>">Contact Us</a>
							</li>
						</ul>
					</div>
					<div class="login-wrapper">
						<% if(session[:user_id] == nil) %>
						<div id="login-reg" class="login-register">
							<a href="javascript:void(0)">Login / Register</a>
						</div>
						<div id="signin_menu">
							<form action="<%= authentication_login_url %>" method="post">
								<p>
									<label for="username">Username</label>
									<input id="textUserName" name="textUserName" required="required" value="<%= @userName %>" title="User Name" tabindex="4" type="text">
								</p>
								<p>
									<label for="password">Password</label>
									<input id="textPassword" name="textPassword" required="required" value="" title="password" tabindex="5" type="password">
								</p>
								<% if(!@errorMessage.blank?) %>
								<div class="error-text">
									<%= @errorMessage %>
								</div>
								<% end %>
								<p class="remember">

									<input type="hidden" name="hidFirstName" id="hidFirstName" value="<%= @firstName %>" />
									<input type="hidden" name="hidLastName" id="hidLastName" placeholder="Last Name" value="<%= @lastName %>" />
									<input type="hidden" name="hidStreetAddress" id="hidStreetAddress" placeholder="Street Address" value="<%= @streetAddress %>" />
									<input type="hidden" name="hidselectCity" id="hidselectCity" placeholder="City, State" value="<%= @citystateVal %>" />
									<input type="hidden" name="hidZipCode" id="hidZipCode" placeholder="Zipcode" value="<%= @zipCode %>" />
									<input type="hidden" name="hidPhoneNumber" id="hidPhoneNumber" placeholder="Phone Number" value="<%= @phoneNumber %>" />
									<input type="hidden" name="hidredirectUrl" id="hidredirectUrl" value="<%= @redirectUrl %>" />
									<input type="hidden" name="hidReviewerID" id="hidReviewerID" value="<%= @reviewerID %>" />
									<input type="hidden" name="hidReviewID" id="hidReviewID" value="<%= @reviewID %>" />
									<input type="hidden" name="hidReviewCount" id="hidReviewCount" value="<%= @reviewCount %>" />
									<input id="signin_submit" value="Sign in" tabindex="6" type="submit">
									<!--<input id="remember" name="remember_me" value="1" tabindex="7" type="checkbox">
									<label for="remember">Remember me</label>-->
								</p>

								<p class="forgot">
									<a href="<%= authentication_requestpassword_url %>" id="resend_password_link"><b>Forgot your password?</b></a>
								</p>
								<div class="signup">
									New User? <a href="<%= user_registeration_GetRegister_url %>">Signup Here</a>
								</div>
							</form>
						</div>
						<% else %>
						<div id="logout-reg" class="logout-register">
							<% @signedUser =SubscribedUser.find_by(id: session[:user_id]) %>
							<a href="javascript:void(0);"><%= image_tag("user.png", :alt => "",:style => "vertical-align:top", :width => "40px", :height=> "40px") %><%= @signedUser.FirstName %></a>
						</div>
						<div id="signout_menu">
							<form action="<%= user_profile_ViewProfile_url %>" method="post">

								<input id="signout_submit" value="My Profile" tabindex="6" type="submit">

							</form>
							<form action="/authentication/logout" method="post">

								<input id="signout_submit" value="Sign Out" tabindex="6" type="submit">

							</form>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="banner">
		<div class="browser-center">
			<div id="innwe-banner-area">
				<div class="banner-content-innwe">
					<h1>Lorem Ipsum, consectetur, adipisci</h1>
					<p>
						If you want to know about your customer that he will pay for the quality services that you provide. BillysList is the right tool to confirm.
					</p>
					<p>
						<a href="<%= nicks_list_About_url %>">More Information</a>
					</p>
				</div>
				<div id="search">
					<form id="frmCustomerSearch" action="<%= customer_search_GetDetails_url %>" method="post">
						<div class="search-heading">
							Search Customer Rate/Reviews or Search for info on a potential customer.
						</div>
						<div id="search-form">
							<div class="form-textbox">
								<input name="txtFirstName" type="text" required="true" class="textbox-small" id="txtFirstName" placeholder="First Name" value="<%= @firstName %>" pattern="^[A-Za-z]+[A-Za-z]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<input name="txtLastName" type="text" required="true" class="textbox-small" id="txtLastName" placeholder="Last Name" value="<%= @lastName %>" pattern="^[A-Za-z]+[A-Za-z]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<input name="txtStreetAddress" type="text" required="true" class="textbox" id="txtStreetAddress" placeholder="Street Address" value="<%= @streetAddress %>" pattern="^[A-Za-z0-9 ,]+$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [11111, Street Address]')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<input name="selectCity" type="text" required="true" autocomplete="off" class="textbox" id="selectCity" placeholder="City, State" value="<%= @citystateVal %>" pattern="^[A-Za-z]+[ ]?[A-Za-z]+,[ ][A-Za-z]{2,2}$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Seattle, WA] ')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<!--<input name="selectState" type="text" required="true" class="textbox" id="selectState" placeholder="State" value="<%= params[:selectState] %>" />-->
							</div>
							<div class="form-textbox">
								<input name="txtZipCode" type="text" required="true" class="textbox-small" id="txtZipCode" maxlength="6" placeholder="Zipcode" value="<%= @zipCode %>" pattern="^[0-9]+[0-9]$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [123456] ')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<input name="txtPhoneNumber" type="text" required="true" class="textbox-small" id="txtPhoneNumber" maxlength="12" placeholder="Phone Number" value="<%= @phoneNumber %>" pattern="^[0-9]{3,3}[-]?[0-9]{3,3}[-]?[0-9]{4,4}$" oninvalid="this.setCustomValidity('Invalid format. Format should be like [1234567890 or 123-456-7890] ')" oninput="setCustomValidity('')" />
							</div>
							<div class="form-textbox">
								<input type="submit" name="Submit" id="Submit" value="Submit" class="search-bt" />
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>