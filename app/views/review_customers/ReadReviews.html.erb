<!DOCTYPE html>
<html>
	<head>
		<title>NicksList - Add Reviews</title>
	</head>
	<body>
		<%= render partial: "/layouts/header" %>
		
		<div id="main-content-wrapper">
			<div class="browser-center">

				<div id="review-header">
					<div id="review-header-left">
						<h1><%= @firstName %>  <%= @lastName %></h1>
						<p>
							<% if(@reviewCount == '1') %>
								has <%= @reviewCount %> review available
							<% else %>
								has <%= @reviewCount %> reviews available
							<% end %>
						</p>
					</div>
					<div id="review-header-right">
						<div class="address-desc">
							<%= @streetAddress %>,	<%= @citystateVal %> <%= @zipCode %>
						</div>
						<div class="address-phone">
							<%= @phoneNumber %>
						</div>
					</div>
				</div>

				<div id="signup-wrapper">
					<div id="signup-header">
						<h1>Review Details</h1>
						<!--<h2>Please fill the below given form to provide your reviews</h2>
					</div>
					<!--<div class="steps"><%= image_tag("step1.jpg", :alt => "") %></div>-->

					<div id="singup-form-area">
						<table width="100%">
							
							<tr>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td align="left"><h3>General Info</h3></td>
							</tr>
							<tr>
								<td align="left">
								<table width="100%">
									<% @reviewQuestion.each do |quset| %>
									<% if(quset.Type == "General") %>
									<% if(quset.ParentID == nil) %>
									<tr>
										<td align="left"> 
											<%= quset.Description %>? 
											<% if(!@reviewAnswers[quset.ID - 1].IsYes.blank?) %>	
												(<%= @reviewAnswers[quset.ID - 1].IsYes %>)
											<% end%>	
										</td>
									</tr>
									<% if(quset.ID == 1) %>
									<tr>										
										<% if(!@reviewAnswers[quset.ID - 1].Comments.blank?) %>
										<td align="left"> <p>Comments : <%= @reviewAnswers[quset.ID - 1].Comments %></p> </td>
										<% else %>
										<td align="left"> <p>No Comments</p> </td>
										<% end %>
									</tr>
									<% end %>
									<tr><td>&nbsp;</td></tr>
									<% else %>
									<tr>
										<td align="left" style="padding-left: 15px"> 
											<%= quset.Description %>? 
											<% if(!@reviewAnswers[quset.ID - 1].IsYes.blank?) %>	
												(<%= @reviewAnswers[quset.ID - 1].IsYes %>)
											<% end%>	
											 
										</td>
									</tr>
									
									<% end %>
									<% end %>
									<% end %>
								</table></td>
							</tr>
							<tr>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td align="left"><h3>Detailed Info</h3></td>
							</tr>
							<tr>
								<td align="left">
								<table width="100%">
									<% @reviewQuestion.each do |quset| %>
									<% if(quset.Type == "Detailed") %>
									 
									<tr>
										<td align="left">
										<%= quset.Description %>? 
										<% if(quset.ID != 17) %>
										<% if(!@reviewAnswers[quset.ID - 1].IsYes.blank?) %>	
											(<%= @reviewAnswers[quset.ID - 1].IsYes %>)
										<% end%>
										<% end %>						
										</td>
									</tr>
									
									<tr>
										<% if(!@reviewAnswers[quset.ID - 1].Comments.blank?) %>
										<td align="left"> <p>Comments : <%= @reviewAnswers[quset.ID - 1].Comments %></p> </td>
										<% else %>
										<td align="left"> <p>No Comments</p> </td>
										<% end %>
									</tr>
									<tr><td>&nbsp;</td></tr>
									<% end %>
									<% end %>
								</table></td>
							</tr>
							
						</table>
					</div>

				</div>

			</div>
		</div>
		</div>

		<%= render partial: "/layouts/footer" %>

	</body>
</html>
