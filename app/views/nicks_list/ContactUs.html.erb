<div id="wrapper">
<%= render partial: "/layouts/header" %>

<div id="main-content-wrapper">
	<div class="browser-center">
		<div id="left-content-area">
			<h1><%= @title %></h1>
			
			<br />
			<% if(flash[:notice] != nil) %>
			<div id="SignupForm">
				<b><span style="line-height: 20px">Thank you for submitting your request.</span><br /><span style="line-height: 20px">One of our representatives will contact you shortly.</span></b>
			</div>
			<% else %>
			<div id="SignupForm">
				<form action="<%= nicks_list_ContactUs_url %>" method="post">

					<div class="singup-textarea">
						<span class="required">*</span>
						<input type="text" name="textFirstName" id="textFirstName" required="true" class="singup-textbox-small" placeholder="First name" pattern="^[A-Za-z]+[A-Za-z]$" value="<%= @userfirstName %>" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
					</div>
					<div class="singup-textarea">
						<span class="required">*</span>
						<input type="text" name="textLastName" id="textLastName" required="true" class="singup-textbox-small" placeholder="Last name" pattern="^[A-Za-z]+[A-Za-z]$" value="<%= @userlastName %>" oninvalid="this.setCustomValidity('Invalid format. Format should be like [Steve]')" oninput="setCustomValidity('')" />
					</div>
					<div class="singup-textarea">
						<span class="required">*</span>
						<input type="text" name="textEmail" id="textEmail" required="true" class="singup-textbox-small" placeholder="Email" value="<%= @userEmail %>" pattern="^[a-zA-Z0-9]+[.]?[_]?[a-zA-Z0-9]+@[a-zA-Z0-9]+[.][a-zA-Z]{2,3}$" value="<%= @userContact %>" oninvalid="this.setCustomValidity('Invalid format. Format should be like [example@example.com] ')" oninput="setCustomValidity('')" />
					</div>
					<div class="singup-textarea">
						<span class="required">&nbsp;</span>
						<input type="text" name="textContact" id="textContact" class="singup-textbox-small" placeholder="Contact Number" size="12" pattern="^[0-9-]+$" value="<%= @userContact %>" oninvalid="this.setCustomValidity('Invalid format. Format should be like [1234567890 or 123-456-7890] ')" oninput="setCustomValidity('')" />
					</div>
					<div class="singup-textarea">
						<span class="required">*</span>
						<textarea id="textComment" name="textComment" required = "required" class="comment-textarea" rows="10" placeholder="Comments"></textarea>
					</div>
					<div class="singup-button">
						<input type="submit" name="Submit" id="Submit" value="Submit" class="org-bt" />
					</div>
				</form>
			</div>
			<% end %>
		</div>
		<% if(!@testimonialList.blank?) %>
		<div id="right-content-area">
			<div id="client-testimonials">
				<h1>Client Testimonials</h1>
				<br />
				<ul class="bxslider">

					<% @testimonialList.each do |test| %>
					<li>
						<div class="testimonial-rotating">
							<div class="testimonial-desc">
								<%= test.Comments %>
							</div>
							<div class="testimonial-name">
								<h2><%= test.FirstName %> <%= test.LastName %></h2>
								<h3><%= test.Occupation %></h3>
							</div>
						</div>
					</li>
					<% end %>

				</ul>
			</div>
		</div>
		<% end %>
	</div>
</div>

<%= render partial: "/layouts/footer" %>
</div>
