<!DOCTYPE html>
<html>
<head>
	<title>NicksList - User Registration</title>
	<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>	
	<!--<link href="css/style.css" rel="stylesheet" type="text/css" />
	<link href="css/jquery.bxslider.css" rel="stylesheet" type="text/css" />
	<script type="text/javascript" src="js/jquery-1.10.1.min.js"></script>
	<script type="text/javascript" src="js/jquery.bxslider.min.js"></script>-->
	<script type="text/javascript">
		$(document).ready(function(){
 			$('.bxslider').bxSlider({
  				mode: 'horizontal',
  				speed:'500',
  				auto:'true',
  				pause:'5000'
  			});	
  			$('.login-register a').click(function(){
				$('#signin_menu').toggle();
			});
			$('.logout-register a').click(function(){
				$('#signout_menu').toggle();
			});
		});
			
  		$(function() {    
    		$( "#selectCity" ).autocomplete({
      			source: availableCities
    		});
    		$( "#textBussCity" ).autocomplete({
      			source: availableCities
    		});
    		$( "#textMailCity" ).autocomplete({
      			source: availableCities
    		});
  		});
  </script>
</head>
<body onload="SignupForm_AuthUser('<%= @authCode %>', '<%= @companyName %>', '<%= @incorporationType %>', '<%= @bussStreetAddress %>', '<%= @bussCity %>', '<%= @bussState %>', '<%= @bussZipCode %>', '<%= @mailStreetAddress %>', '<%= @mailCity %>', '<%= @mailState %>', '<%= @mailZipCode %>', '<%= @phoneNumber %>', '<%= @email %>', '<%= @license %>'); <% if(!@error.blank?)%> SignupForm_visibility(); <% end %>">
	<div id="wrapper">
	<div id="header-wrapper">
		<div class="browser-center">
        	<div id="header-area">
            	<div id="logo"><a href="/"><%= image_tag("logo.jpg", :alt => "") %></a></div>
                <div id="facebook-like"><%= image_tag("facebook-like.jpg", :alt => "") %></div>
                <div id="customer-support">
                	<p>Customer Support</p>
                    <h1>703 555 5555</h1>
                    <p>Any Questions <a href="mailto:">Email Us</a></p>
                </div>
                <div id="navigation">
                	<div id="nav">
                    	<ul>
                        	<li class="first"><a href="<%= root_url %>" class="active">Home</a></li>
                            <li><a href="<%= nicks_list_About_url %>">About BillysList</a></li>
                            <li><a href="<%= nicks_list_HowItWorks_url %>">How it works </a></li>
                            <li><a href="#">FAQ’s</a></li>
                            <li><a href="#">Testimonials</a></li>
                            <li><a href="#">Press Release</a></li>
                            <li><a href="#">Contact Us</a></li>
                        </ul>
                    </div>
                	<div class="login-wrapper">
								<% if(session[:user_id] == nil) %>
								<div id="login-reg" class="login-register">
									<a>Login / Register</a>
								</div>
								<div id="signin_menu">
									<form action="<%= authentication_login_url %>" method="post">
										<p>
											<label for="username">Username</label>
											<input id="textUserName" name="textUserName" required="required" value="" title="User Name" tabindex="4" type="text">
										</p>
										<p>
											<label for="password">Password</label>
											<input id="textPassword" name="textPassword" required="required" value="" title="password" tabindex="5" type="password">
										</p>
										<% if(!@errorMessage.blank?) %>
										<p><b><%= @errorMessage %></b></p>
										<% end %>
										<p class="remember">
											<input id="signin_submit" value="Sign in" tabindex="6" type="submit">
											<!--<input id="remember" name="remember_me" value="1" tabindex="7" type="checkbox">
											<label for="remember">Remember me</label>-->
										</p>
										<p class="forgot">
											<a href="<%= authentication_requestpassword_url %>" id="resend_password_link">Forgot your password?</a>
										</p>
										<div class="signup">
											New User? <a href="<%= user_registeration_GetRegister_url %>">Signup Here</a>
										</div>
									</form>
								</div>
								<% else %>
								<div  class="logout-register">
									<%= image_tag("user.png", :alt => "", :width => "40px", :height=> "40px") %><a><%= session[:user_name] %>
								</div>
								<div id="signout_menu">
									<form action="<%= user_profile_ViewProfile_url %>" method="post">
										
											<input id="signout_submit" value="My Profile" tabindex="6" type="submit">
										
									</form>
									<form action="/authentication/logout" method="post">
										
											<input id="signout_submit" value="Sign Out" tabindex="6" type="submit">
										
									</form>
								</div>
								<% end %>
							</div>
                </div>
            </div>
        </div>
    </div>
    <div id="banner">
        	<div class="browser-center">
            	<div id="innwe-banner-area">
                    <div id="search">
                    	<form action="/customer_search/GetDetails" method="post">
                    	<div class="search-heading">Search Customer Rate/Reviews or Search for info on a potential customer.</div>
                    	<div id="search-form">
                        	<div class="form-textbox">
                        	  <input name="txtFirstName" type="text" required="true" class="textbox-small" id="txtFirstName" placeholder="First Name" />
                        	</div>
                        	<div class="form-textbox">
                        	  <input name="txtLastName" type="text" required="true" class="textbox-small" id="txtLastName" placeholder="Last Name" />
                        	</div>
                            <div class="form-textbox">
                        	  <input name="txtStreetAddress" type="text" required="true" class="textbox" id="txtStreetAddress" placeholder="Street Address" />
                        	</div>
                          	<div class="form-textbox">
                       	    	<input name="selectCity" type="text" required="true" autocomplete="off" class="textbox" id="selectCity" placeholder="City, State" />
                        	</div>
                        	<div class="form-textbox">
                        	<!--<input name="selectState" type="text" required="true" class="textbox" id="selectState" placeholder="State" />-->
                        	</div>
                            <div class="form-textbox">
                        	  <input name="txtZipCode" type="text" required="true" class="textbox-small" id="txtZipCode" placeholder="Zipcode" />
                        	</div>
                            <div class="form-textbox">
                        	  <input name="txtPhoneNumber" type="text" required="true" class="textbox-small" id="txtPhoneNumber" placeholder="Phone Number" />
                        	</div>
                            <div class="form-textbox">
                       	  	  <input type="submit" name="Submit" id="Submit" value="Submit" class="search-bt" />
                        	</div>
                        	</form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div id="main-content-wrapper">
    	<div class="browser-center">
        	<div id="signup-wrapper">
               <div id="signup-header">
                  <h1>My Profile</h1>
               </div>
               <!--<div class="steps"><%= image_tag("step1.jpg", :alt => "") %></div>-->
               
               <div id="singup-form-area">
               		<div class="singup-form-heading">
                    	<h1>Edit Profile</h1>
                        <div id="Error"><%= @messageString %></div>        
                    </div>
                    
               		<div class="singup-form">
               			<div id="SignupForm">
               			<form action="<%= user_profile_UpdateProfile_url %>" method="post">
               			<input type="hidden" id="hiddenFilledCode" name="hiddenFilledCode" />
                    	<div class="singup-textarea">
                    	  <input type="text" name="textCompany" id="textCompany" readonly="readonly" required="true" class="singup-textbox"  placeholder="Name of Company" value="<%= @companyName %>" />
                    	</div>
                        <div class="singup-textarea">
                    	  <input type="text" name="textFirstName" id="textFirstName" required="true" class="singup-textbox-small"  placeholder="First Name" value="<%= @firstName %>" />
                        </div>
                        <div class="singup-textarea">
                          <input type="text" name="textLastName" id="textLastName" required="true" class="singup-textbox-small"  placeholder="Last Name" value="<%= @lastName %>" />
                    	</div>
                        <div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textIncorporationType" id="textIncorporationType" required="true" class="singup-textbox"  placeholder="Type of Incorporation" value="<%= @incorporationType %>" />
                    	</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textPhoneNumber" id="textPhoneNumber" required="true" class="singup-textbox-small"  placeholder="Phone Number" value="<%= @phoneNumber %>" />
                    	</div>
                        <div class="singup-textarea">
                    	  <input type="email" name="textEmail" id="textEmail" required="true" class="singup-textbox-small"  placeholder="Email Address" value="<%= @email %>" />
                        </div>
                        <div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textLicense" id="textLicense" required="true" class="singup-textbox-small"  placeholder="Contractor License Number" value="<%= @license %>" />
                    	</div>
                    	<div class="subscription-Title">Business Address</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textBussStreetAddress" required="true" id="textBussStreetAddress" class="singup-textbox"  placeholder="Business Street Address" value="<%= @bussStreetAddress %>" />
                    	</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textBussZipCode" id="textBussZipCode" required="true" class="singup-textbox-small"  placeholder="ZipCode" value="<%= @bussZipCode %>" />
                    	</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textBussCity" id="textBussCity" required="true" class="singup-textbox-small"  placeholder="City, State" value="<%= @bussCity %>" />
                    	</div>
                    	<div class="subscription-Title">Mailing Address</div>
                        <div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textMailStreetAddress" id="textMailStreetAddress" required="true" class="singup-textbox"  placeholder="Mailing Street Address" value="<%= @mailStreetAddress %>" />
                    	</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textMailZipCode" id="textMailZipCode" required="true" class="singup-textbox-small"  placeholder="ZipCode" value="<%= @mailZipCode %>" />
                    	</div>
                    	<div class="singup-textarea">
                    	  <input type="text" readonly="readonly" name="textMailCity" id="textMailCity" required="true" class="singup-textbox-small"  placeholder="City, State" value="<%= @mailCity %>" />
                    	</div>
                        
                        <div class="singup-textarea">
                        	<input type="submit" name="Submit" id="Submit" value="Save Profile" class="org-bt" />
                        </div>
                        </form>
                        </div>
                    </div>
               </div>
               
             </div>
        </div>
    </div>
    
    <div id="footer-wrapper">
    	<div class="browser-center">
        	<div class="footer-links">
            	<ul>
                	<li><a href="<%= root_url %>">Home</a></li>
                    <li><a href="<%= nicks_list_About_url %>">About BillysList</a></li>
                    <li><a href="<%= nicks_list_HowItWorks_url %>">How it works </a></li>
                    <li><a href="#">FAQ’s</a></li>
                    <li><a href="#">Testimonials</a></li>
                    <li><a href="#">Press Release</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="copyright">Copyright © 2013. All Right Reserved. <a href="#">Privacy Policy</a>   |   <a href="#">Terms & Conditions</a></div>
        </div>
    </div>
    
</div>
</body>
</html>
